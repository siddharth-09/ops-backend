# OpsFlow Guardian 2.0 Backend Configuration
# Copy this file to .env and fill in your actual values

# LLM Provider Configuration (Choose one)
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Portia Configuration
PORTIA_API_KEY=your_portia_api_key_here

# Database Configuration
DATABASE_URL=postgresql://opsflow:12345@localhost:5432/opsflow_guardian
DATABASE_URL_TEST=postgresql://opsflow:12345@localhost:5432/opsflow_guardian_test

# Encryption key for user email passwords
ENCRYPTION_KEY=your_encryption_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_URL=redis://localhost:6379/1

# Security Configuration
SECRET_KEY=your_jwt_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000", "https://your-frontend-domain.com"]

# External Service API Keys - CONFIGURED
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_APP_TOKEN=your_slack_app_token
NOTION_TOKEN=your_notion_api_token_here
JIRA_SERVER=https://your-domain.atlassian.net
JIRA_USERNAME=your_email@example.com
JIRA_API_TOKEN=your_jira_api_token_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
SENDGRID_API_KEY=your_sendgrid_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true

# Environment
ENVIRONMENT=development
DEBUG=true

# File Upload Configuration
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Workflow Configuration
MAX_WORKFLOW_STEPS=50
MAX_EXECUTION_TIME_MINUTES=60
MAX_CONCURRENT_WORKFLOWS=10

